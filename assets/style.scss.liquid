    font-family: "AvenirNextLTPro-Bold";
  	text-decoration: none;
  	text-shadow: 0 1px rgba(0, 0, 0, 0.4);
  	font-size: 14px;
  	font-weight: bold;
  	color: #fff;
  }

  /* Disabled tab */
  &.r-tabs .r-tabs-nav .r-tabs-state-disabled {
  	opacity: 0.5;
  }

  /* Active state tab anchor */
  &.r-tabs .r-tabs-nav {
    .r-tabs-state-active {
      background: none;
      .r-tabs-anchor {
        border-top-left-radius: 2px;
        border-top-right-radius: 2px;
  	    color: #fff;
    	  text-shadow: none;
  	    background-color: #037e8c;
        text-transform: uppercase;
        font-family: "AvenirNextLTPro-Bold";
        border-top: 8px solid #d8a45d;
      }
    }
  }

  /* Tab panel */
  &.r-tabs .r-tabs-panel {
    &.upgrade-program {
      background: url("{{ 'upgrade_program_background_web.jpg' | asset_url }}") no-repeat 17%;
      background-size: cover;
      position: relative;
      @media (max-width: 1680px) {
        background-position: 20%;
      }
      @media (max-width: 959px) {
        background: url("{{ 'background_upgrade_program_mobile.jpg' | asset_url }}") no-repeat 0 30%;
        background-size: cover;
        height: auto;
        text-align: center;
      }
      .content-wrapper {
        position: relative;
        left: 56%;
        width: 39%;
        color: #fff;
        margin: 4% 0;
        @media (max-width: 959px) {
          left: 0;
          margin-top: 400px;
          width: 100%;
          margin-bottom: 50px;
        }
        img {
          width: 380px;
          @media (max-width: 1200px) {
            width: 80%;
          }
        }
        .divider {
          background: url("{{ 'divider.png' | asset_url }}") no-repeat center;
          background-size: contain;
          width: 380px;
          height: 40px;
          @media (max-width: 1200px) {
            width: 80%;
          }
          @media (max-width: 959px) {
            margin: 0 auto;
          }
        }
        p {
          margin-bottom: 0;
          line-height: 30px;
          span {
            font-family: "AvenirNextLTPro-Bold";
          }
        }
        .offer-link {
          background: url("{{ 'offer_button.png' | asset_url }}") no-repeat center;
          color: #fff;
          text-decoration: none;
          background-size: cover;
          padding: 10px 35px;
          text-transform: uppercase;
          display: inline-block;
          margin-top: 20px;
          font-family: "AvenirNextLTPro-Bold";
        }
      }
    }
    &.free-filter-case {
      background: url("{{ 'background_freecase.jpg' | asset_url }}") no-repeat left;
      background-size: cover;
      position: relative;
      font-size: 0;
      &:before {
        position: absolute;
        top: 0;
        content: '';
        background: url("{{ 'top_pattern_free_kanga_case.png' | asset_url }}") no-repeat;
        display: block;
        background-size: 20px;
        height: 70px;
        width: 20px;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
      }
      &:after {
        position: absolute;
        bottom: 0;
        content: '';
        background: url("{{ 'bottom_pattern_free_kanga_case.png' | asset_url }}") no-repeat;
        display: block;
        background-size: 170px;
        background-size: 250px;
        height: 110px;
        width: 250px;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        opacity: .5;
      }
      .explanation {
        font-size: 12px;
        position: absolute;
        text-align: center;
        width: 250px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        color: #fff;
        top: 35%;
        font-family: "AvenirNextLTPro-Bold";
        @media (max-width: 960px) {
          top: 43%;
        }
      }
      .left-section {
        display: inline-block;
        width: 50%;
        font-size: 12px;
        padding: 40px 0;
        @media (max-width: 959px) {
          width: 100%;
          margin-top: 40px;
          padding-bottom: 80px;
        }
        img {
          width: 50%;
          margin: 0 auto;
          display: block;
          @media (max-width: 768px) {
            width: 90%;
          }
        }
      }
      .right-section {
        display: inline-block;
        width: 50%;
        font-size: 12px;
        padding: 40px 0;
        @media (max-width: 959px) {
          width: 100%;
          padding-bottom: 140px;
          padding-top: 80px;
        }
        img {
          width: 50%;
          margin: 0 auto;
          display: block;
          @media (max-width: 768px) {
            width: 90%;
          }
        }
      }
    }
  }

  /* Accordion anchor */
  .r-tabs .r-tabs-accordion-title .r-tabs-anchor {
  	display: block;
  	padding: 10px;

  	background-color: #00c5ad;
  	color: #fff;
  	font-weight: bold;
  	text-decoration: none;
  	text-shadow: 0 1px rgba(0, 0, 0, 0.4);
  	font-size: 14px;

  	border-top-right-radius: 4px;
  	border-top-left-radius: 4px;
  }

  /* Active accordion anchor */
  .r-tabs .r-tabs-accordion-title.r-tabs-state-active .r-tabs-anchor {
  	background-color: #fff;
  	color: #00c5ad;
  	text-shadow: none;
  }

  /* Disabled accordion button */
  .r-tabs .r-tabs-accordion-title.r-tabs-state-disabled {
  	opacity: 0.5;
  }

  /* Buttons */
  button {
  	display:inline-block;
  	margin-top: 10px;
  	margin-right: 10px;
  	padding: 10px 20px;
  	line-height: 100%;

  	color: #fff;
  	font-size: 14px;
  	text-align: center;
  	text-shadow: 0 1px rgba(0, 0, 0, 0.3);
  	vertical-align: middle;
  	font-weight: bold;

  	border: 0;
  	-webkit-border-radius: 3px;
  	-moz-border-radius: 3px;
  	border-radius: 3px;
  	background-color: #00c5ad;
  	box-shadow: 0px 3px 0px 0px #00ab94;

  	cursor: pointer;
  }

  /* Info bar */
  .info {
  	display:inline-block;
  	margin-top: 10px;
  	margin-right: 10px;
  	padding: 10px 20px;
  	width: 300px;
  	line-height: 100%;

  	font-family: Consolas, "Liberation Mono", Menlo, Courier, monospace;
  	font-size: 14px;
  	color: #00c5ad;
  	border: 2px solid #00ab94;
  	-webkit-border-radius: 3px;
  	-moz-border-radius: 3px;
  	border-radius: 3px;
  	background-color: #fff;

  	cursor: pointer;
  }
}



